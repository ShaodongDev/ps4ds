def compute_error(estimate, temperature,day,hour):
    ASE = 0
    n = len(temperature)
    for ind in range(n):
        ASE += (temperature[ind] - estimate[hour[ind],day[ind]-1])**2
    root_ASE = np.sqrt(ASE/n)
    return root_ASE

